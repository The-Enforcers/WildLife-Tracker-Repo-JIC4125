// authMiddleware.js
const jwt = require('jsonwebtoken');

const verifyToken = (req, res, next) => {
    const authHeader = req.headers['authorization'];
    console.log("Authorization Header:", authHeader);  // Log the full authorization header
    
    const token = authHeader && authHeader.split(' ')[1];
    console.log("Extracted Token:", token);  // Log extracted token
  
    if (!token) {
      console.log("No token found in request");
      return res.status(403).json({ message: 'No token provided.' });
    }
  
    jwt.verify(token, process.env.JWT_SECRET, (err, decoded) => {
      if (err) {
        console.error("JWT verification error:", err);  // Log any verification errors
        return res.status(401).json({ message: 'Failed to authenticate token.' });
      }
      console.log("Decoded User ID:", decoded.id);  // Confirm successful decode
      req.userId = decoded.id;
      next();
    });
  };
  

module.exports = verifyToken;
